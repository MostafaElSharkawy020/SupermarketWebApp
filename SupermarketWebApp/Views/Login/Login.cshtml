@model SupermarketWebApp.ViewModels.LoginViewModel;
<body>
    <header>
        <nav>
            <div class="logo">Travel Explorer</div>
            <ul class="nav-menu">
                <!-- Navigation will be dynamically updated by auth.js -->
            </ul>
        </nav>
    </header>

    <main>
        <div class="login-container">
            <div class="login-form">
                <h2>Login to Super Market</h2>
                <form id="loginForm" asp-controller="login" asp-action="login">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required asp-for="email"/>
                        <span class="error" id="emailError"></span>
                    </div>

                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required asp-for="password"/>
                        <span class="error" id="passwordError"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit">Login</button>
                    </div>

                    <div class="form-links">
                        <p>
                            Don't have an account? <a asp-controller="login" asp-action="registerpage" >Register here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Super Market. All rights reserved.</p>
    </footer>

</body>
