<a asp-controller="Admin" asp-action="NewProductPage" class="btn btn-primary mb-4">
    Add New Product
</a>

<div class="row" id="productListContainer">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 bg-light border-0">
                <img src="@product.imagePath" class="card-img-top" alt="@product.name" style="height:200px;object-fit:cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.name</h5>
                    <p class="card-text">Price: @product.price.ToString("C0") L.E</p>
					<p class="card-text">Quantity: @product.quantity</p>
					<p class="card-text">@product.description</p>
					<p class="card-text">Category: @product.category.name</p>
                    <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.id" class="btn btn-success w-100">Edit</a>
                </div>
            </div>
        </div>
    }
</div>

