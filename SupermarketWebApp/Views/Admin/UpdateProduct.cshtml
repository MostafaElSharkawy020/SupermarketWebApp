@model SupermarketWebApp.Models.Product

<form asp-controller="Admin" asp-action="UpdateProduct" method="post" >
	<input type="hidden" asp-for="id" />
	<div class="form-group">
		<label asp-for="name"></label>
		<input asp-for="name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="price"></label>
		<input asp-for="price" class="form-control" type="number" step="any" />
	</div>
	<div class="form-group">
		<label asp-for="quantity"></label>
		<input asp-for="quantity" class="form-control" type="number" />
	</div>
	<div class="form-group">
		<label asp-for="description"></label>
		<textarea asp-for="description" class="form-control"></textarea>
		<span asp-validation-for="description" class="text-danger"></span>
	</div>
	<select asp-for="categoryId">
		@foreach (var category in ViewBag.Categories)
		{
			<option value="@category.id">@category.name</option>
		}
	</select>
	<button type="submit">Update</button>
	
</form>

<form asp-controller="Admin" asp-action="DeleteProduct" method="post" class="mt-2">
	<input type="hidden" asp-for="id" />
	<button type="submit" class="btn btn-danger">Delete</button>
</form>