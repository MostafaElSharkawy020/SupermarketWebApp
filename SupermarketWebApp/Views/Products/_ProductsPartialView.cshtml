@model List<SupermarketWebApp.Models.Product>

@foreach (var product in Model)
{
    <div class="col-md-3 mb-4">
        <div class="card h-100 bg-light border-0">
            <img src="@product.imagePath" class="card-img-top" alt="@product.name" style="height:200px;object-fit:cover;" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@product.name</h5>
                <p class="card-text">Price: @product.price.ToString("C0") L.E</p>
                <form asp-controller="Cart" asp-action="Add" method="post" class="mt-auto">
                    <input type="hidden" name="productId" value="@product.id" />
                    <button type="submit" class="btn btn-success w-100">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
}